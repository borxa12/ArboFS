<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/facebook_dark"
                        android:startColor="@color/facebook_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/facebook_dark"
                        android:startColor="@color/facebook_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <gradient android:angle="270"
                        android:endColor="@color/facebook"
                        android:startColor="@color/facebook" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>